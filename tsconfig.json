{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "initGeometry.ts"
  ],
  "typeRoots": [
    "node_modules/ammojs-typed/ammo/ambient"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
